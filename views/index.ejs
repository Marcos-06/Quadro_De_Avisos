<!-- Incluir o head -->
<%- include('./partials/head') %>

  <body>
    <!-- Menu -->
    <%- include('./partials/navbar.ejs') %>

      <div class="container">

        <% avisos.forEach(aviso => { %>

          <div class="card shadow mt-4">

            <div class="card-header bg-purple text-white pl-5 p-4 d-flex align-items-center justify-content-between">
              <h2><i class="fas fa-exclamation"></i> <%= aviso.titulo %></h2>
              <h3 class="lead"><%= moment(aviso.data).format("DD/MM/YYYY") %></h3>
            </div>
  
            <div class="card-body p-5">
              <!-- Info Perfil -->
              <div class="d-flex align-items-center">
                <img src="img/liceu.jpg" class="img-thumbnail rounded-circle" width="75">
                <div class="ml-2">
                  <div class="font-weight-bold">ETEC João Belarmino</div>
                  <div class="text-secondary"> <%= moment(aviso.data, "YYYYMMDD").fromNow(); %> </div>
                </div>
              </div>
  
              <!-- Descrição do Aviso -->
              <div class="mt-4">
                <%= aviso.mensagem %>              
              </div>
  
            </div><!-- Card-Body -->
          </div><!-- Card -->
        <% }) %>

      </div><!-- Container -->


      <!-- Incluir -->
      <!-- Optional JavaScript -->
      <!-- jQuery first, then Popper.js, then Bootstrap JS -->
      <%- include('./partials/scripts_import') %>
  </body>

  </html>